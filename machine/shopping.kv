<Manager>:
    InitScreen:
        name: 'InitScreen'
    BuyScreen:
        name: 'BuyScreen'
    ItemScreen:
        name: 'ItemScreen'
    CarScreen:
        name: 'CarScreen'

<InitScreen>:
    Image:
        size: self.size
        pos: self.pos
        source: 'templates/background_initiscreen.png'

<HomeBar>:
    BoxLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'templates/background_buyscreen.png'

        Button:
            id: home_button
            background_normal: 'templates/buttons/home_normal.png'
            background_down: 'templates/buttons/home_down.png'
            size_hint_y: None
            height: 100
            size_hint_x: None
            width: 100
            pos: 20, self.y
            pos_hint: {'center_y': 0.5}
            on_release:
                root.on_home_button_release()

<BuyScreen>:
    canvas:
        Color:
            rgba: 1.0, 1.0, 1.0, 1.0
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: BuyScreen
        opacity: 0
        BoxLayout:
            orientation: 'vertical'
            HomeBar:
                size_hint_y: None
                height: self.width * (100 / 595)
            BoxLayout:
                orientation: 'horizontal'
                ScrollView:
                    size_hint_x: 2/4
                    BoxLayout:
                        id: Class_Buy1
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
                ScrollView:
                    orientation: 'vertical'
                    BoxLayout:
                        id: Class_Buy2
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 1/3
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.40
                    canvas:
                        Color:
                            rgba: 0.80, 0.80, 0.80, 1.0
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    BoxLayout:
                    Button:
                        size_hint_y: 4/5
                        pos_hint: {'center_y': 0.5}
                        size_hint_x: None
                        width: self.height
                        on_release:
                            root.on_cart_button_release()
                    BoxLayout:
                        size_hint_x: None
                        width: self.height / 2

                BoxLayout:
                    canvas:
                        Color:
                            rgba: 1.0, 0.9451, 0.6588, 1.0
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    ScrollView:
                        BoxLayout:
                            id: CartBar
                            orientation: 'vertical'
                            size_hint_y: None
                            height: self.minimum_height

<CartConstruct>:
    orientation: 'vertical'
    size_hint_y: None
    height: 40

    BoxLayout:
        orientation: 'horizontal'

        Button:
            size_hint_x: None
            width: self.parent.width / 5
            pos_hint: {'center_y': 0.4}
            text: '-'
            on_release:
                root.remove_self()

        Label:
            id: item
            pos_hint: {'center_x': 0.1, 'center_y': 0.5}
            color: 0, 0, 0, 1.0
            font_size: 15

        Button:
            size_hint_x: None
            width: self.parent.width / 5
            pos_hint: {'center_y': 0.4}
            text: '+'
            on_release:
                root.duplicate_self()

<ClassCreate>:
    orientation: 'vertical'
    size_hint_y: None
    height: app.root.height / 4
    padding: 10
    Button:
        opacity: 1
        pos_hint: {'center_x': 0.1}
        id: btn1
        color: 0, 0, 0, 1.0
        font_size: 30
        size_hint_x: None
        width: app.root.height / 4

<SubClassCreate>:
    orientation: 'horizontal'
    size_hint_y: None
    height: app.root.height / 3.15
    padding: 10
    spacing: 10
    Button:
        opacity: 1
        pos_hint: {'center_y': 0.1}
        id: btn2
        size_hint_x: None
        width: app.root.width / 3.15
    Button:
        opacity: 1
        pos_hint: {'center_y': 0.1}
        id: btn3
        size_hint_x: None
        width: app.root.width / 3.15

<SCCodd>:
    orientation: 'horizontal'
    size_hint_y: None
    height: app.root.height / 3.15
    padding: 10
    spacing: 10
    Button:
        opacity: 1
        pos_hint: {'center_y': 0.1}
        id: btn4
        size_hint_x: None
        width: app.root.width / 3.15

<ItemScreen>:
    orientation: 'vertical'
    BoxLayout:
        opacity: 0
        id: ItemScreen
        orientation: 'vertical'

        HomeBar:
            size_hint_y: None
            height: self.width * (100 / 595)

        BoxLayout:
            size_hint_y: None
            height: 10

        BoxLayout:
            id: item
            size_hint_y: None
            height: 400
            opacity: 0
            pos_hint: {'center_y': 0.5}
            Image:
                id: food

        BoxLayout:
            size_hint_y: None
            height: 10

        BoxLayout:
            ScrollView:
                BoxLayout:
                    id: Add
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 10

        BoxLayout:
            size_hint_y: None
            height: 100
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}

            AnchorLayout:
                anchor_x: 'center'

                Button:
                    size_hint: None, None
                    size: self.parent.width * 0.9, self.parent.height * 0.6
                    text: 'Back'
                    on_release:
                        root.on_back_button_release()

            AnchorLayout:
                anchor_x: 'center'

                Button:
                    size_hint: None, None
                    size: self.parent.width * 0.9, self.parent.height * 0.6
                    text: 'Add to Cart'
                    on_release:
                        root.on_add_to_cart_button_release()

<ListCreate>:
    size_hint_y: None
    height: 50
    BoxLayout:
        BoxLayout:
            size_hint_x: 2.4/3
        BoxLayout:
            Label:
                color: 0, 0, 0, 1
                markup: True
                id: item1
                canvas.before:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            size_hint_x: None
            width: 10

        BoxLayout:
            Button:
                id: item2
                size_hint: None, None
                size: 50, 50

<CarScreen>:
    BoxLayout:
        orientation: 'vertical'
        id: CarScreen
        opacity: 0
        HomeBar:
            size_hint_y: None
            height: self.width * (100 / 595)
        BoxLayout:
            orientation: 'vertical'
            id: screen
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'templates/background_carscreen.png'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                Button:
                    size_hint_y: None
                    height: screen.height / 10
                    size_hint_x: None
                    width: self.height * 5
                    font_size: 30
                    text: 'Back'
                    on_release:
                        root.on_back_button_release()

            AnchorLayout:
                anchor_x: 'center'
                size_hint_y: None
                height: screen.height - (screen.height / 10) * 2
                ScrollView:
                    BoxLayout:
                        id: invoice
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                Button:
                    size_hint_y: None
                    height: screen.height / 10
                    size_hint_x: None
                    width: self.height * 5
                    font_size: 30
                    text: 'Finalize Purchase'